{
  "name": "htt-potamus",
  "version": "0.4.3",
  "main": "dist/main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --port=7500",
    "generate:version": "ts-node scripts/write-version.ts",
    "generate:tauri-conf": "ts-node scripts/write-tauri-conf.ts",
    "generate:tauri-dist": "ts-node scripts/prepare-tauri-dist.ts",
    "generate:icons": "ts-node scripts/generate-icons.ts",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "tauri": "tauri",
    "tauri:dev": "pnpm run tauri dev",
    "tauri:build": "set TAURI_BUNDLE_NSIS_INSTALL_MODE=perMachine && pnpm generate:version && ng b && pnpm generate:tauri-conf && pnpm generate:tauri-dist && pnpm tauri build"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.1.0",
    "@angular/common": "^18.1.0",
    "@angular/compiler": "^18.2.13",
    "@angular/core": "^18.1.0",
    "@angular/forms": "^18.1.0",
    "@angular/platform-browser": "^18.1.0",
    "@angular/platform-browser-dynamic": "^18.2.13",
    "@angular/router": "^18.1.0",
    "idb": "^8.0.3",
    "normalize.css": "^8.0.1",
    "prismjs": "^1.30.0",
    "rxjs": "~7.8.0",
    "tauri": "^0.15.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.1.3",
    "@angular/cli": "^18.1.3",
    "@angular/compiler-cli": "^18.1.0",
    "@tauri-apps/api": "^2.5.0",
    "@tauri-apps/cli": "^2.5.0",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^22.15.19",
    "@types/prismjs": "^1.26.5",
    "cross-env": "^7.0.3",
    "icon-gen": "^5.0.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.5.2"
  },
  "tauri": {
    "config": "src-tauri/tauri.conf.ts"
  }
}
